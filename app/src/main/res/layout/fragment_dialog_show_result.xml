<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="510dp"
             tools:context="androidlab.edu.cn.nucyixue.ui.teachPack.map.DialogShowResultFragment">

    <TextView
        android:id="@+id/dialog_show_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="恭喜小组"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="170dp"/>

    <TextView
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:paddingRight="10dp"
        android:textColor="@color/lcim_bottom_bar_text_black"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_result_description1"
        android:gravity="center"
        android:text="杨浩东，杨浩东，杨浩东三名同学在2012/01/21-2103/02/12完成了以下任务："
        android:minLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintVertical_bias="0.02"/>
    <TextView
        android:layout_marginTop="0dp"
        android:textColor="@color/primary_text"
        android:id="@+id/dialog_result_description2"
        android:gravity="center"
        android:text="1: 学习高等数学 \n 2每天跑步 \n3 学习线性代数"
        android:lines="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_result_description1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="13dp"
        app:layout_constraintVertical_bias="0.009"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="240dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/showresult"
        tools:layout_editor_absoluteX="86dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_show_result_title"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="2dp"
        android:id="@+id/dialog_show_result_recycler"
        android:layout_width="384dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/justxiahuaxian"
        tools:layout_editor_absoluteX="14dp"/>
    <ImageView
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary"
        android:layout_width="395dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_result_description2"
        tools:layout_editor_absoluteX="8dp"/>
    <TextView
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="5dp"
        android:layout_marginTop="3dp"
        android:text="@string/study_write"
        android:id="@+id/justxiahuaxian"
        app:layout_constraintTop_toBottomOf="@+id/dialog_result_description2"
        android:layout_width="154dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="8dp"/>
    <ImageView
        android:id="@+id/justxiahuaxian2"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary"
        android:layout_width="395dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_show_result_recycler"
        tools:layout_editor_absoluteX="8dp"/>
    <TextView
        android:textColor="@color/colorPrimary"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:text="分享"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/justxiahuaxian2"
        android:id="@+id/justtext"
        android:layout_width="50dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="8dp"/>
    <ImageView
        android:id="@+id/share_qq"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/justxiahuaxian2"
        app:layout_constraintStart_toEndOf="@id/justtext"
        android:src="@drawable/qq"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <ImageView

        android:layout_marginLeft="10dp"
        android:id="@+id/share_wechat"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/justxiahuaxian2"
        app:layout_constraintStart_toEndOf="@id/share_qq"
        android:src="@drawable/wechat"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    
</android.support.constraint.ConstraintLayout>
