<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="androidlab.edu.cn.nucyixue.ui.findPack.FindSearchActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:background="@null"
            android:id="@+id/search_edit"
            android:paddingLeft="15dp"
            android:hint="搜索你感兴趣的专题,用户，资源  "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <ImageView
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:src="@drawable/search_green"
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/camera_search"
            android:paddingRight="5dp"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexsubject_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"/>

</LinearLayout>
