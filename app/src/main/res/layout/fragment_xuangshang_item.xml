<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_xuanshang_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="18dp"
                android:lines="2"
                android:text="请教：高等数学作业,如图所示，第三题"
                android:textColor="#040405"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/fragment_xuanshang_item_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hold"/>

            <ImageView
                android:id="@+id/fragment_xuanshang_item_moneyimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_xuanshang_item_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/money_color"/>

            <TextView
                android:id="@+id/fragment_xuanshang_item_money"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_xuanshang_item_description"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_xuanshang_item_moneyimage"
                android:gravity="center"
                android:text="1.00 元"/>

            <ImageView
                android:id="@+id/fragment_xuanshang_item_timeimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_xuanshang_item_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_xuanshang_item_money"
                android:src="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:id="@+id/fragment_xuanshang_item_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_xuanshang_item_description"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_xuanshang_item_timeimage"
                android:gravity="center"
                android:text="2017/08/12/2:02"/>

            <ImageView
                android:id="@+id/fragment_xuanshang_item_schoolimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_xuanshang_item_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_xuanshang_item_time"
                android:src="@drawable/ic_school_black_24dp"/>

            <TextView
                android:id="@+id/fragment_xuanshang_item_school"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_xuanshang_item_description"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_xuanshang_item_schoolimage"
                android:gravity="center"
                android:text="中北大学"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>